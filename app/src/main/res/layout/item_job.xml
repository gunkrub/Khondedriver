<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="18dip"
    android:paddingTop="5dip"
    android:paddingRight="18dip"
    android:paddingBottom="5dip">
    <!-- ListRow Left side Thumbnail image -->
    <!-- Rightend Arrow -->
    <!-- City-->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/strCity"
        android:textColor="#040404"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvPickup"
        android:layout_alignParentEnd="true" />
    <!-- Weather Information-->
    <TextView
        android:id="@+id/tvFromTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_centerHorizontal="true"
        android:text="string/strWeather"
        android:textColor="#767676"
        android:textSize="15dip"
        android:paddingLeft="20dip" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/weightcbm"
        android:textColor="#767676"
        android:textSize="15dip"
        android:paddingLeft="20dip"
        android:layout_below="@+id/tvFromTo"
        />

    <TextView
        android:id="@+id/tvPickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/pickupdate"
        android:textColor="#767676"
        android:textSize="15dip"
        android:paddingLeft="20dip"
        android:layout_below="@+id/tvDate"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvDropoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/dropoffdate"
        android:textColor="#767676"
        android:textSize="15dip"
        android:paddingLeft="20dip"
        android:layout_below="@+id/tvPickup"
        android:layout_alignRight="@+id/tvPickup"
        android:layout_alignEnd="@+id/tvPickup"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="string/current_price"
        android:textColor="#767676"
        android:textSize="15dip"
        android:paddingLeft="20dip"
        android:layout_alignBaseline="@+id/tvWeight"
        android:layout_alignBottom="@+id/tvWeight"
        android:layout_alignEnd="@+id/tvPickup" />
</RelativeLayout>  
